<%-include('header');-%>
    <div class="page-padding">
        <div class="heading">
            <h1 class="heading-h1">
                <%=listHeading%>
            </h1>
        </div>

        <div class="box">
            <div class="item-lists">
                <%items.forEach((e,index)=>{%>
                    <form action="/delete" method="post">
                    <div class="item">
                            <input type="checkbox" name="checkbox" value="<%=e._id%>" id="<%=e._id%>" onChange="this.form.submit()">
                            <p for="checkbox">
                                <%=e.name%>
                            </p>
                        </div>
                    </form>
                        <%});%>
                            <form class="item" action="/<%=typeOfList%>" method="post">
                                <input type="text" name="newItem" id="newItem" placeholder="New Item"
                                    autocomplete="off">
                                <button type="submit">+</button>
                            </form>
            </div>

        </div>
        <%-include('footer');-%>